@using AspNetMvcAds.Data.Data.Entity
<section>
	<div class="container">

		<div class="row">
			<div class="col-md-12">
				<nav class="navbar navbar-expand-lg navbar-light navigation">
					<a class="navbar-brand" asp-controller="home" asp-action="index">
						<img src="~/images/logo.png" alt="">
					</a>
					<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
							aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="navbarSupportedContent">
						<ul class="navbar-nav ml-auto main-nav ">
							<li class="nav-item active">
								<a class="nav-link" asp-controller="home" asp-action="index">Home</a>
							</li>
							<li class="nav-item dropdown dropdown-slide">
								<a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
									Pages <span><i class="fa fa-angle-down"></i></span>
								</a>
								<!-- Dropdown list -->
								<div class="dropdown-menu">
									<a class="dropdown-item" asp-controller="home" asp-action="aboutus">About Us</a>
									<a class="dropdown-item" asp-controller="home" asp-action="contactus">Contact Us</a>
									<a class="dropdown-item" asp-controller="home" asp-action="userprofile">User Profile</a>
									<a class="dropdown-item" asp-controller="home" asp-action="error">404 Page</a>
									<a class="dropdown-item" asp-controller="home" asp-action="package">Package</a>
									<a class="dropdown-item" asp-controller="page" asp-action="detail">Single Page</a>
									<a class="dropdown-item" asp-controller="home" asp-action="storesingle">Store Single</a>
									<a class="dropdown-item" asp-controller="blog" asp-action="singleblog">Single Blog</a>
									<a class="dropdown-item" asp-controller="blog" asp-action="index">Blog</a>

								</div>
							</li>
							<li class="nav-item dropdown dropdown-slide">
								<a class="nav-link dropdown-toggle" href="" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
									Listing <span><i class="fa fa-angle-down"></i></span>
								</a>
								<!-- Dropdown list -->
								<div class="dropdown-menu">
									<a class="dropdown-item" href="category.html">Ad-Gird View</a>
									<a class="dropdown-item" href="ad-list-view.html">Ad-List View</a>
								</div>
							</li>


							<!--NAvbar icerisinde ki Category Listelenmesi-->
							<li class="nav-item dropdown dropdown-slide">
								<a class="nav-link dropdown-toggle" href="" data-toggle="dropdown"
								   aria-haspopup="true" aria-expanded="false">
									Categories
									<span><i class="fa fa-angle-down"></i></span>
								</a>
								<!-- Dropdown list -->

								<ul class="dropdown-menu">

									@foreach (Category category in ViewBag.MainCategories)
									{										
										<li>
											<a class="dropdown-item" asp-route-id="@category.Id">
												@category.Name
											</a>
										</li>
									}
								</ul>

							</li>


						</ul>

						 <ul class="navbar-nav">
                                    @*Kullanıcı Girişi yapıldığında*@
                                    @if (Context.User.Identity.IsAuthenticated)
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" href="#">@Context.User.Identity.Name</a> 
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-controller="Auth" asp-action="Logout">Logout</a>
                                        </li>
                                    }
                                    @*Kullanıcı Giriş Yapılmamışsa*@
                                    else
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link" asp-controller="Auth" asp-action="Login">Login</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-controller="Auth" asp-action="Register">Register</a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </nav>
                    </div>

						
					</div>
				</nav>
			</div>
		</div>

	</div>
</section>

